<fieldset>
  <legend>Input</legend>
  <form name="form" action="base64" method="post">     <!--  Parameter? -->
    <p>Enter the text you want to Base64 encode or decode:</p>
    <label title="Paste the text to transform here">
      <textarea rows="10" cols="60" name="input" class="input"><%= defined?(input) ? input : "" %></textarea>
    </label>
    <br/>
    <label title="Text pasted in the textarea will be transformed to Base64">
      <input type="submit" name="process" value="Encode"/>
    </label>
    <label title="Base64-encoded text pasted into the textarea will be converted to its native form">
      <input type="submit" name="process" value="Decode"/>
    </label>
  </form>
</fieldset>
<% if defined? output %>
  <fieldset class="cryptarea">
    <legend>Output</legend>
    <p>Result:</p>
    <label title="This is the result of the conversion selected above">
      <textarea cols="60" rows="10"><%= output %></textarea>                    
    </label>
  </fieldset>
<% end %>
