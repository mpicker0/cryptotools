%fieldset
  %legend Input
  %form{name: "form", action: "md5sum", method: "post"}
    %p Enter the text you want to hash with MD5:
    %label{title: "Paste the text to hash here"}
      %textarea.input{rows: "10", cols: "60", name: "input"}= defined?(input) ? input : ""
    %br
    %label{title: "Hash the text using MD5"}
      %input{type: "submit", name: "submit", value: "Encode"}
- if defined? output
  %fieldset.cryptarea
    %legend Output
    %p MD5-hashed output in hex:
    %label{title: "This is the result of hashing the input with MD5, in hex"}
      %textarea{rows: "10", cols: "60"}= output
