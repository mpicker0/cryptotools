<fieldset>
  <legend>Input</legend>
  <form name="form" action="samlrr" method="post">     <!--  Parameter? -->
    <p>Enter encoded SAML request or response you want to decode:</p>
    <label title="Paste the text to decode here">
      <textarea rows="10" cols="60" name="input" class="input"><%= defined?(input) ? input : "" %></textarea>
    </label>
    <br/>
    <label title="Text pasted in the textarea will be decoded">
      <input type="submit" name="process" value="Decode"/>
    </label>
  </form>
</fieldset>
<% if defined? output %>
  <fieldset class="cryptarea">
    <legend>Output</legend>
    <p>Result:</p>
    <label title="This is the result of decoding the text from above">
      <textarea cols="60" rows="10"><%= output %></textarea>                    
    </label>
  </fieldset>
<% end %>
